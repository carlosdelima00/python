# exemplo 3
def soma(a,b):
     print(a + b)
     print(a % b)
     print(a ** b)

# exemplo 4
def par_ou_impar(n):
    operaçao = n % 2
    if (operaçao == 0):
        print(f' {n} é par')
    else:
        print(f' {n} é impar')

# exemplo 5
def outraSoma(a,b):
    print(f'valores antes da soma {a} x {b}') # representação da multiplicação antes da soma das variaveis
    print(f'soma da variavel "a" {a} + 1')
    a += 1
    print(f'soma da variavel "b" {b} + 5')
    b += 5
    print(f'{a} x {b}')
    m = a*b
    print(f'{a} x {b} valor da multiplicação é: {m}' ) # resultado final
outraSoma(3,7)
outraSoma(-2,1) #exemplo
